<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/color_primary_dark</item>
        <item name="colorControlNormal">@color/color_primary_dark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg</item>
    </style>

    <style name="CustomCard">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/radius_card</item>
        <item name="contentPadding">@dimen/left_small_margin_16</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="CustomCard.LoginCard">
        <item name="android:paddingLeft">@dimen/left_small_margin_16</item>
        <item name="android:paddingRight">@dimen/right_small_margin_16</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>
    </style>

    <style name="NavigationDrawer" parent="Widget.Design.NavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="itemIconTint">@color/nav_icon_color_selector</item>
        <item name="itemBackground">@drawable/nav_drawer_item_selector</item>
        <item name="itemTextColor">@color/nav_color_selector</item>
    </style>

    <style name="CustomCard.ProductCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="contentPadding">0dp</item>
        <item name="android:layout_margin">@dimen/spacing_small_8</item>
    </style>

    <style name="CountBtn">
        <item name="android:layout_width">@dimen/size_count_btn</item>
        <item name="android:layout_height">@dimen/size_count_btn</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ProductText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>

    <style name="ProductText.ProductTitle">
        <item name="android:layout_gravity">center_horizontal</item>
        <!--<item name="android:layout_marginTop">12dp</item>-->
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/middle_font_14</item>
    </style>

    <style name="ProductText.ProductDescription">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/middle_font_14</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="ProductText.ProductDetailsDescription">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/middle_font_14</item>
    </style>
    <style name="ProductText.CommentDescription">
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/middle_font_14</item>
    </style>

    <style name="ProductText.LabelPrice">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <!--<item name="android:layout_marginBottom">@dimen/spacing_small_8</item>-->
    </style>

    <style name="ProductText.ValuePrice">
        <item name="android:layout_height">@dimen/size_count_btn</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/small_font_12</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/left_medium_margin_32</item>
        <item name="android:layout_marginRight">@dimen/right_medium_margin_32</item>
    </style>

    <style name="StartBtn" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/color_accent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShowBtn" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- AccountFragment -->

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/normal_font_16</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="edit.address">
        <item name="android:enabled">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="CustomButton.AddressBtn">
        <item name="android:layout_marginLeft">@dimen/spacing_small_8</item>
        <item name="android:layout_marginRight">@dimen/spacing_small_8</item>
        <item name="android:layout_marginTop">@dimen/left_small_margin_16</item>
        <item name="android:layout_marginBottom">@dimen/right_small_margin_16</item>
    </style>

    <style name="AccountText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AccountText.AccountTitle">
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_font_18</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small_8</item>
        <item name="android:layout_marginBottom">@dimen/right_small_margin_16</item>
    </style>

    <style name="AccountText.AccountSampleText">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textColor">@color/account_text</item>
        <item name="android:textSize">@dimen/normal_font_16</item>
    </style>

</resources>
