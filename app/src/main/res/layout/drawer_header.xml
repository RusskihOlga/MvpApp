<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/nav_header_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/right_small_margin_16"
    android:paddingLeft="@dimen/right_small_margin_16"
    android:paddingRight="@dimen/right_small_margin_16"
    android:paddingTop="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drawer_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/user_photo"
        app:civ_border_width="2dp"
        app:civ_border_color="#f4f4f4"/>

    <TextView
        android:id="@+id/drawer_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="@string/roboto_medium"
        android:text="@string/name_account"
        android:textColor="@color/white"
        android:textSize="16sp"/>

</RelativeLayout>